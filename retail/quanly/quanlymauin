    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;
        const logo = document.getElementById('global-logo');

        function updateUI(index) {
            slides.forEach((slide, i) => {
                if (i === index) {
                    slide.classList.add('active');
                    const animated = slide.querySelectorAll('.animate-zoom-in');
                    animated.forEach(el => { el.style.animation = 'none'; el.offsetHeight; el.style.animation = ''; });
                    
                    const isInfographic = slide.getAttribute('data-type') === 'infographic';
                    if (isInfographic) logo.style.opacity = '0';
                    else logo.style.opacity = '1';
                } else {
                    slide.classList.remove('active');
                }
            });
        }

        function nextSlide() { currentSlide = (currentSlide + 1) % totalSlides; updateUI(currentSlide); }
        function prevSlide() { currentSlide = (currentSlide - 1 + totalSlides) % totalSlides; updateUI(currentSlide); }
        function toggleFullScreen() { if (!document.fullscreenElement) document.documentElement.requestFullscreen(); else if (document.exitFullscreen) document.exitFullscreen(); }
        
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight' || e.key === ' ') nextSlide();
            else if (e.key === 'ArrowLeft') prevSlide();
            else if (e.key === 'Home') { currentSlide = 0; updateUI(currentSlide); }
            else if (e.key === 'End') { currentSlide = totalSlides - 1; updateUI(currentSlide); }
            else if (e.key.toLowerCase() === 'f') toggleFullScreen();
        });

        if (totalSlides > 0) updateUI(currentSlide);
    </script>
